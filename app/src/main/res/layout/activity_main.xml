<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">


        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_marginLeft="18dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/settings"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="left"
                android:src="@drawable/settings"
                />
        </LinearLayout>



    <LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile"
            android:focusable="true"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:clickable="true"
            android:src="@drawable/manicon"
          />

    <TextView
        android:id="@+id/username"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text=""
        android:layout_marginTop="13dp"
        android:textSize="23sp"
        android:textStyle="bold"
        android:textColor="#4960a0"
        />



    </LinearLayout>


    <LinearLayout
        android:id="@+id/profileContent"
        android:visibility="gone"
        android:layout_marginBottom="25dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="220dp"
        android:layout_marginRight="20dp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/editName"
            android:layout_height="47dp"
            android:clickable="true"
            android:layout_width="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Name"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="12dp"
                android:textColor="#200e32"
                android:textSize="16sp"
                />
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="right"
                android:layout_margin="16dp"
                android:src="@drawable/rightarrow"
                android:id="@+id/arrowName" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/aboutUs"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:layout_height="47dp"
            android:layout_width="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:textColor="#200e32"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            />
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="right"
                android:layout_margin="16dp"
                android:src="@drawable/rightarrow"
                android:id="@+id/arrowAboutUs" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
        android:id="@+id/termsConditions"
            android:layout_height="47dp"
            android:clickable="true"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms and Conditions"
            android:textColor="#200e32"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            />
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="right"
                android:layout_margin="16dp"
                android:src="@drawable/rightarrow"
                android:id="@+id/arrowTermsConditions" />
    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/privacy"
            android:layout_height="47dp"
            android:clickable="true"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:textColor="#200e32"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="12dp"
                android:textSize="16sp"
                />
            <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="right"
            android:layout_margin="16dp"
            android:src="@drawable/rightarrow"
            android:id="@+id/arrowPrivacyPolicy" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/logout"
                android:layout_width="130dp"
                android:layout_height="47dp"
                android:layout_marginTop="50dp"
                android:text="Logout"
                android:gravity="center"
                android:orientation="vertical"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/button_border"
                android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/mainContent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="25dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/history"
            android:layout_width="165dp"
            android:layout_height="128dp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="210dp"
            android:clickable="true"
            app:cardBackgroundColor="#f7ebe5"
            >

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:src="@drawable/time"
                android:layout_marginBottom="20dp"
                android:id="@+id/soon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textSize="19sp"
                android:textStyle="bold"
                />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/goals"
            android:layout_width="165dp"
            android:layout_height="128dp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="17dp"
            app:cardBackgroundColor="#e9f6ea"
            >

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:src="@drawable/category"
                android:layout_marginBottom="20dp"
                android:id="@+id/category" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goals"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textSize="19sp"
                android:textStyle="bold"
                />
        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/goalsContent"
        android:layout_marginTop="360dp"
        android:layout_marginBottom="25dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your latest goals"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="19sp"
            android:textStyle="bold"
            />


    <LinearLayout
        android:id="@+id/goalView"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tasksRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="20dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:nestedScrollingEnabled="true">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:id="@+id/emptyView"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/image1"
                android:layout_width="130dp"
                android:layout_height="65dp"
                android:src="@drawable/soon" />

            <TextView
                android:id="@+id/emptyGoalsHeading"
                android:layout_width="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#797979"
                android:textSize="17sp"
                android:text="@string/emptyGoalsHeading" />

            <TextView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="13.5sp"
                android:textColor="#797979"
                android:lineSpacingExtra="3sp"
                android:text="@string/emptyGoalsDescription"
                />
        </LinearLayout>


    </LinearLayout>





</RelativeLayout>
